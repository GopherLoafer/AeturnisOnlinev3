                            <% if (character.prestige_marker === 'silver') { %>🥈<% } %>
                            <% if (character.prestige_marker === 'gold') { %>🥇<% } %>
                            <% if (character.prestige_marker === 'platinum') { %>💎<% } %>
                            <% if (character.prestige_marker === 'diamond') { %>💠<% } %>
                            <% if (character.prestige_marker === 'legendary') { %>⭐<% } %>
