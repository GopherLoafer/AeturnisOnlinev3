        .chat-send {
            background: linear-gradient(to bottom, #0066ff, #0044cc);
            border: none;
            color: white;
            padding: var(--spacing-sm) var(--spacing-md);
            border-radius: 8px;
            cursor: pointer;
            font-size: var(--font-sm);
            font-weight: bold;
            transition: all 0.2s;
            min-height: 44px;
            min-width: 60px;
            white-space: nowrap;
        }

        @media (max-width: 767px) {
            .chat-send {
                padding: 12px var(--spacing-sm);
                border-radius: 12px;
                font-size: clamp(14px, 3.5vw, 16px);
                min-width: 55px;
